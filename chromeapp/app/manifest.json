{
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "version": "26",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        {
            "socket": [
                "tcp-listen:*:*",
                "tcp-connect:*:*",
                "udp-bind:*:*",
                "udp-send-to:*:*"
            ]
        },
        {
            "fileSystem": [
                "write",
                "retainEntries",
                "directory"
            ]
        },
        "storage",
        "<all_urls>",
        "system.network",
        "file:///*"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "scripts/main.js",
                "scripts/bundle.js",
                "scripts/chromereload.js",
                "scripts/web-server-chrome/wsc-chrome.js",
                "scripts/server/dummy-handler.js",
                "scripts/server/app.js"
            ]
        }
    },
    "sockets": {
        "tcp": {
            "connect": "*:*"
        },
        "tcpServer": {
            "listen": ["*:*"]
        },
        "udp": {
            "send": "*:*",
            "bind": "*:*",
            "multicastMembership": ""
        }
    }
}
